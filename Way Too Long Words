#include<bits/stdc++.h>
using namespace std;
const int N = 1005;
int main() {
    int test;
    cin >> test;
    while (test--) {
        char s[N];
        cin >> s;
        int len = strlen(s);
        if (len <= 10) {
            cout << s << endl;
        }
        else
            cout << s[0] << len - 2 << s[len - 1] << endl;

    }
}
